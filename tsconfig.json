{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir" : ".",
        "outDir": "./dist",
        "sourceMap": false,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es6",
        "strict": true,
    },
    "include": ["."], 
    "exclude": ["node_modules"],
    "lib": ["es6"]
}